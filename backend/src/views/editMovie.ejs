<!DOCTYPE html>
<html>
  <head>
    <title>Edit Movie</title>
  </head>
  <body>
    <h2>Edit Movie</h2>

    <form
      action="/movie/<%= movie._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <input type="text" name="title" value="<%= movie.title %>" />
      <textarea name="description"><%= movie.description %></textarea>
      <input type="text" name="genre" value="<%= movie.genre %>" />
      <input
        type="number"
        name="releaseYear"
        value="<%= movie.releaseYear %>"
      />
      <input type="number" name="duration" value="<%= movie.duration %>" />
      <input type="text" name="language" value="<%= movie.language %>" />

      <label>Replace Video (optional)</label>
      <input type="file" name="video" />

      <label>Replace Thumbnail (optional)</label>
      <input type="file" name="thumbnail" />

      <button type="submit">Update Movie</button>
    </form>

    <a href="/admin">Back</a>
  </body>
</html>
